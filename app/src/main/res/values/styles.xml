<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColorPrimary">#fff</item>


    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="popwin_anim_style" parent="AppTheme">
        <item name="android:windowEnterAnimation">@anim/alpha_fade_in</item>
        <item name="android:windowExitAnimation">@anim/alpha_fade_out</item>
    </style>
    <style name="Dialog_Fullscreen" parent="Animation.AppCompat.Dialog" >
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
    <style name="Dialog_Alert" parent="Animation.AppCompat.Dialog" >
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:textColorPrimary">#333333</item>
    </style>

    <style name="style_smile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="style_text_small" parent="style_smile">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="style_text_gray_small" parent="style_text_small">
        <item name="android:textColor">#999999</item>
    </style>
    <style name="style_text_white" parent="style_text">
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="style_text" parent="style_smile">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
